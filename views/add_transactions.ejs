<%- include('partials/default_template.ejs'); %>
<div class="content">
  <div class="container-fluid">
    <!-- your content here -->
    <div class = "row">
        <div class = "col-md shadow-sm p-3 mb-5 bg-white rounded border border-light">
            <h1>Add Transactions</h1>
            <table class="table" id="productTable">
                <thead>
                    <tr>
                        <th class="text-center product-col">Book Title</th>
                        <th class="text-center subtotal-col">Price</th>
                        <th class="text-center subtotal-col">Variant</th>
                        <th class="text-center add-col">Add to Cart</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-left">1</td>
                        <td class="text-left">
                            Price
                        </td>
                        <td class="text-left">
                            Variant
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-info">
                                <i class="fas fa-arrow-circle-right" id = "testing"></i>
                            </button>
                        </td>
                    </tr>
                    <% for (let i=0; i < product.length; i++){%>
                        <!-- <form class = "product-form"> -->
                            <tr id>
                                <td class="text-left product-name"><%= product[i].item_name %></td>
                                <td class="text-left product-price"><%= parseFloat(product[i].item_price).toFixed(2) %></td>
                                <td class="text-left product-variant"><%= (product[i].variant_name).charAt(0).toUpperCase() + (product[i].variant_name).substr(1).toLowerCase() %></td>
                                <td class="text-center product-click">
                                    <button type="button" class="btn btn-info insertTransaction" id = "<%= product[i].item_id%>">
                                        <i class="fas fa-arrow-circle-right"></i>
                                    </button>
                                </td>
                            </tr>
                        <!-- </form> -->
                    <%}%>
                </tbody>
            </table>
        </div>
        <div class = "col-md shadow-sm bg-white rounded border border-light">
            <h3>Cart</h3>
            <table class="cart-table" id="productTable">
                <thead>
                    <tr>
                        <th class="text-left product-col pl-3">Product</th>
                        <th class="text-left subtotal-col">Price</th>
                        <th class="text-center subtotal-col">Quantity</th>
                        <th class="text-center add-col">Remove from Cart</th>
                    </tr>
                </thead>
                <tbody id = "cart-body">
                </tbody>
            </table>
            <div class = "proceed border-info border-left p-3 m-3">
                <span> Total: </span>
                <span class = "total-price"> 0.00 </span>
                <td class="text-center">
                    <button type="button" class="btn btn">
                        <i class="fas fa-plus"></i> Make Transaction
                    </button>
                </td>
            </div>
        </div>
    </div>
  </div>
</div>
<%- include('partials/footer.ejs'); %>
</div> <!--Closing div-->
</body>
</html>